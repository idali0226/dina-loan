            <id>dina-release</id>
            <name>Dina Internal Snapshot Repository</name>
            <url>http://build.naturforskaren.se:8180/archiva/repository/dina-release/</url>
        </repository>
        <snapshotRepository>
            <id>dina-snapshots</id>
